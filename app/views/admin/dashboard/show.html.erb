  <div class="col">
    <div class="collapse multi-collapse" id="multiCollapseExample1">
      <div class="card card-body" style="font-size:30px">
        <%= @category_count %>
        
      </div>
    </div>
  </div>
  <div class="col">
    <div class="collapse multi-collapse" id="multiCollapseExample2">
      <div class="card card-body" style="font-size:30px">
        <%= @product_count %> 
      </div>
    </div>
  </div>
</div>


